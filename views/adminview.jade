extends base
block flow
	#createEvent
		h2 Skapa Event
		form(id="createEventForm", action="createEvent", method="post")
			div
				label Eventets namn
				input(type="text", name="eventTitle")
			div
				label Eventets beskrivning
				textarea(name="eventDescription")
			block skapaButton
				div
					input(type="submit", name="eventSubmit", value="Skapa")
	#createObjectives
		h2 Skapa uppdrag
		form(id="createObjectivesForm", action="createObjectives", method="post")
			div
				label Event
				select(name="eventID")
					if events
						for event in events
							option(value=event.url) #{event.title}
			div
				label Updragets titel
				input(type="text", name="objectiveTitle")
			div
				label Uppdragets beskrivning
				textarea(name="objectiveDescription")
			block skapaButton
		h2 Ladda upp uppdragsfil
		form(id="uploadObjectiveJSON", action="uploadObjectiveFile", method="post", enctype="multipart/form-data")
			div
				input(type="file", name="objectiveFile")
				input(type="submit", name="objectiveFileSubmit", value="Ladda upp")
	#assignObjectives
		h2 Tilldela uppdrag
		form(id="createObjectivesForm", action="assignObjectives", method="post")
			mixin selectObjective(num)
				.objectAssignmentBox
					div
						label Uppdrag
						select(name="objective"+num)
								if objectives
									for objective in objectives
										option(value=objective._id) #{objective.title}
					div
						label Placering
						input(type="number", name="placement"+num, value=num)
			mixin selectObjective (1)
			mixin selectObjective (2)
			mixin selectObjective (3)
			mixin selectObjective (4)
			mixin selectObjective (5)
			mixin selectObjective (6)
			mixin selectObjective (7)
			mixin selectObjective (8)
			mixin selectObjective (9)
			mixin selectObjective (10)
			block n0llegroups
				div
					label n0llegrupp
					select(name="group")
						option(value="A") A
						option(value="B") B
						option(value="C") C
						option(value="D") D
						option(value="E") E
						option(value="F") F
						option(value="G") G
						option(value="H") H
						option(value="I") I
						option(value="J") J
						option(value="K") K
						option(value="L") L
						option(value="M") M
			div
				input(type="submit", name="assignObjectiveSubmit", value="Tilldela")

			
	#createUser
		h2 Skapa Användare
		form(id="createUserForm", action="makeuser", method="post")
			div
				label Användarnamn
				input(type="text", name="user")
			div
				label Lösenord
				input(type="text", name="pwd")
			div
				label Email
				input(type="text", name="email")
			block n0llegroups
			div
				label Admin?
				select(name="admin")
					option(value="true") Sant
					option(value="false") Falskt
			block skapaButton
	#deleteeverything
		h2 Ta bort allt från databasen
		form(id="deleteeverything", action="DELETE", method="get")
			div
				input(type="submit", name="deleteSubmit", value="TA BORT ALLT")
	
			