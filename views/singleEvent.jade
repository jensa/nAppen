extends base
mixin objectiveBox(obj)
	p.trigger #{obj.title}
	.toggle_container
		div
			p #{obj.description}
			#imageUploadForm
				form(id="imageUpload", action="uploadImage", method="post", enctype="multipart/form-data")
					label Ladda upp bild
					input(type="file", name="imageFile")
					input(type="hidden", name="eventID", value=url)
					input(type="hidden", name="eventTitle", value=title)
					input(type="hidden", name="objectiveID", value=obj._id)
					input(type="submit", value="Ladda upp")
			for img in images
				if img.objectiveID == obj._id
					a(href=img.url)
						img.thumbnail(src=img.url, height="50px", width="50px")

block flow
	h2 #{title}
	p #{description}
	h2 Aktuellt uppdrag
	if (objectives)
			for obj in objectives
				mixin objectiveBox(obj)

				
		
		
	

