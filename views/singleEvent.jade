extends base
mixin objectiveBox(obj)
	p.trigger #{obj.title}
	.toggle_container
		div
			p #{obj.description}
			.imageUploadForm
				form(id="imageUpload", action="uploadImage", method="post", enctype="multipart/form-data")
					input(type="file", name="imageFile")
					input(type="hidden", name="eventID", value=url)
					input(type="hidden", name="eventTitle", value=title)
					input(type="hidden", name="objectiveID", value=obj._id)
					input(type="submit", value="Ladda upp bild")
			.textUploadForm
				form(id="textUpload", action="uploadTextForm", method="get")
					input(type="hidden", name="id", value=obj._id)
					input(type="submit", value="Ladda upp text")
			.tumbnails
				for img in obj.images
					a(href='/image?imagePath=' + img.url)
						img.thumbnail(src=img.thumbnail, height="50px", width="50px")

block flow
	h2 #{title}
	p #{description}
	h2 Aktuellt uppdrag
	if (objectives)
			for obj in objectives
				mixin objectiveBox(obj)

				
		
		
	

