			input(type="text", name="headline")
			label Text
			textarea(name="text")
			if adminrole
				select(name="group")
					option(value="ALL") Alla
					option(value="A") A
					option(value="B") B
					option(value="C") C
					option(value="D") D
					option(value="E") E
					option(value="F") F
					option(value="G") G
					option(value="H") H
					option(value="I") I
					option(value="J") J
					option(value="K") K
					option(value="L") L
					option(value="M") M
			input(type="submit", value="Skriv nyhet")
